{
    "extends": "./apify-tsconfig.json",
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "moduleDetection": "auto",
        "target": "ESNext",
        "outDir": "dist",
        "noUnusedLocals": false,
        "lib": [
            "DOM"
        ],
        "baseUrl": "./",
        "paths": {"@/*" : ["src/*"], "shared/*":["shared/*"]},
    },
    "exclude": ["tests", "jest.config.*"]
}